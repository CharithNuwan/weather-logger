{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/save",   "dest": "/api/save.js" },
    { "src": "/api/data",   "dest": "/api/data.js" },
    { "src": "/api/config", "dest": "/api/config.js" },
    { "src": "/(.*)",       "dest": "/api/page.js" }
  ]
}
